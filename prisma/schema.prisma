generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Analysis {
  id          Int      @id @default(autoincrement())
  sessionUuid String   @unique
  status      String   @default("DRAFT")
  optionsJson String?
  resultJson  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       AnalysisFile[]
}

model OptionItem {
  id          Int     @id @default(autoincrement())
  category    String
  code        String
  label       String
  description String?
  sortOrder   Int     @default(0)
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([category, code])
  @@index([category, sortOrder, id])
}

model AnalysisFile {
  id          Int      @id @default(autoincrement())
  sessionUuid String
  originalName String
  storedPath  String
  size        Int
  mimeType    String
  createdAt   DateTime @default(now())
  analysis    Analysis @relation(fields: [sessionUuid], references: [sessionUuid], onDelete: Cascade)

  @@index([sessionUuid])
}
